@charset "utf-8";

body {
    margin: 0;
    height: 100vh;

    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;

    background: center / cover url("fondo.gif");
    background-color: black;
}
header {
    width: 95vw;
    height: 80px;
    margin-bottom: 30px;

    border-bottom: 4px solid ghostwhite;

    color: ghostwhite;
}
header h1 {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    text-align: center;
}

form, #div-stats  { /*Las dos secciones, izquierda y derecha*/
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    align-items: center;

    width: 500px;
    height: 500px;

    margin: 15px;
    padding: 10px;

    border-radius: 5px;

    background: rgb(45,45,92);
    background: linear-gradient(0deg, rgba(45,45,92,1) 35%, rgba(23,35,37,1) 100%);

    box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.21);
    -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.21);
    -moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.21);

    font-family: monospace;
    color: floralwhite;
    text-align: center;
}

form label {
    display: block;
    font-size: 3rem;
}
#div-stats label {
    display: block;
    font-size: 2rem;
}

form input {
    display: block;

    width: 400px;
    height: 60px;

    border: 2px solid ghostwhite;
    border-radius: 2px;
    font-size: 2rem;
}
form input:hover {
    border: 2px solid hotpink;
}


#btn-true {
    background-color: #8f8;
}
#btn-false {
    background-color: #f88;
}

p {
    padding: 5px;
    border: 2px solid #ddd;
    border-radius: 2px;
    width: 400px;
    height: 40px;

    font-size: 2rem;
}